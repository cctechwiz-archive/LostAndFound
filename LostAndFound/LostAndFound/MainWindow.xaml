<Window x:Class="LostAndFound.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:LostAndFound.Views"
        Title="MainWindow" Height="550" Width="825">
    <Grid>
        <TabControl>
            <TabItem Header="Search For Lost Item">
                <views:SearchForLostItemView />
            </TabItem>
            <TabItem Header="Report Found">
                <views:ReportFoundView />
            </TabItem>
            <TabItem Header="Reports">
                <views:ExpiredItemsView />
            </TabItem>
            <TabItem Header="View Expired Items">
                <views:ExpiredItemsView />
            </TabItem>
        </TabControl>
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Background="Transparent" BorderThickness="0">
            <StackPanel>
                <Image Source="Resources/help.png" Stretch="UniformToFill" Width="20" Height="20"></Image>
            </StackPanel>
        </Button>
    </Grid>
</Window>
