<Controls:MetroWindow x:Class="LostAndFound.Views.Dialogs.GenericDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:LostAndFound.ViewModels"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Height="200" Width="450">

    <StackPanel>
        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=Message}" Margin="20,20,20,50"/>
        <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Bottom" Padding="50,10,50,10" Click="Button_Click"/>
    </StackPanel>
    
</Controls:MetroWindow>
