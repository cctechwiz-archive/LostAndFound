<Window x:Class="LostAndFound.Views.FileAsLost" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="360" Width="200" Title="File As Lost">
    <Grid>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <TextBlock Text="Person's Name" Margin="25,10,0,0"/>
            <TextBox  Width="150" Margin="0,2,0,0" HorizontalAlignment="Center"/>
            
            <TextBlock Text="Add Description" Margin="25,10,0,0"></TextBlock>
            <TextBox  Width="150" Margin="0,2,0,0" HorizontalAlignment="Center"/>

            <TextBlock Text="Date Lost" Margin="25,10,0,0"></TextBlock>
            <TextBox  Width="150" Margin="0,2,0,0" HorizontalAlignment="Center"/>

            <TextBlock Text="Email" Margin="25,10,0,0"></TextBlock>
            <TextBox  Width="150" Margin="0,2,0,0" HorizontalAlignment="Center"/>
            
            <TextBlock Text="Phone Number" Margin="25,10,0,0"></TextBlock>
            <TextBox Width="150" Margin="0,2,0,0" HorizontalAlignment="Center"></TextBox>

        </StackPanel>
        <Button Padding="8,8,8,8" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="3">
            <TextBlock Text="File Lost Item"/>
        </Button>

    </Grid>
    
</Window>
